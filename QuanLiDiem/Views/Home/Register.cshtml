@model QuanLiDiem.Models.RegistrationModel

@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5 shadow-lg border-0 card-login">
                <div class="card-header text-center bg-dark text-white">
                    <h2>Đăng Ký</h2>
                </div>
                <div class="card-body p-5" style="background-color: white">

                    <form method="post" asp-action="Register">
                        <div class="form-group">
                            <b><label for="HoTen">Họ tên</label></b>
                            <input type="text" class="form-control" id="HoTen" name="HoTen" required />
                        </div>
                        <div class="form-group">
                            <b><label for="CCCD">CCCD</label></b>
                            <input type="text" class="form-control" id="CCCD" name="CCCD" required />
                        </div>
                        <div class="form-group">
                            <b><label for="SDT">Số điện thoại</label></b>
                            <input type="text" class="form-control" id="SDT" name="SDT" required />
                        </div>
                        <div class="form-group">
                            <b><label for="DiaChi">Địa chỉ</label></b>
                            <input type="text" class="form-control" id="DiaChi" name="DiaChi" required />
                        </div>
                        <div class="form-group">
                            <b><label for="NganhHoc">Ngành học</label></b>
                            <input type="text" class="form-control" id="NganhHoc" name="NganhHoc" required />
                        </div>
                        <div class="form-group">
                            <b><label for="DTB1">Điểm TBM 1</label></b>
                            <input type="number" step="0.01" class="form-control" id="DTB1" name="DTB1" required />
                        </div>
                        <div class="form-group">
                            <b><label for="DTB2">Điểm TBM 2</label></b>
                            <input type="number" step="0.01" class="form-control" id="DTB2" name="DTB2" required />
                        </div>
                        <div class="form-group">
                            <b><label for="DTB3">Điểm TBM 3</label></b>
                            <input type="number" step="0.01" class="form-control" id="DTB3" name="DTB3" required />
                        </div>
                        <div class="form-group">
                            <b><label for="XepLoai">Xếp loại 12</label></b>
                            <input type="text" class="form-control" id="XepLoai" name="XepLoai" required />
                        </div>
                        <br>
                        <button type="submit" class="btn btn-dark w-100">Đăng Ký</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Kiểm tra nếu có thông báo thành công trong TempData
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                alert("@TempData["SuccessMessage"]");
            </text>
        }
    </script>
}
