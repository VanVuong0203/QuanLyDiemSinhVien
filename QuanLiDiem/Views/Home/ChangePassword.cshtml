@model QuanLiDiem.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5 shadow-lg border-0 card-login">
                <div class="card-header text-center bg-dark text-white">
                    <h2>Đổi Mật Khẩu</h2>
                </div>
                <div class="card-body p-5" style="background-color: white">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    @if (ViewData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @ViewData["SuccessMessage"]
                        </div>
                    }

<form method="post">
    <div class="form-group">
        <b><label for="TenTaiKhoan">Tên đăng nhập</label></b>
        <input type="text" class="form-control" id="TenTaiKhoan" name="TenTaiKhoan" required />
    </div>

    <div class="form-group">
        <b><label for="MatKhauCu">Mật khẩu cũ</label></b>
        <input type="password" class="form-control" id="MatKhauCu" name="MatKhauCu" required />
    </div>

    <div class="form-group">
        <b><label for="MatKhauMoi">Mật khẩu mới</label></b>
        <input type="password" class="form-control" id="MatKhauMoi" name="MatKhauMoi" required />
    </div>

    <div class="form-group">
        <b><label for="XacNhanMatKhau">Xác nhận mật khẩu mới</label></b>
        <input type="password" class="form-control" id="XacNhanMatKhau" name="XacNhanMatKhau" required />
    </div>
    <br>
     <button type="submit" class="btn btn-dark w-100">Đổi Mật Khẩu</button>
</form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}