@model Diem

@{
    ViewData["Title"] = "Sửa Điểm";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">Sửa Điểm</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="MSSV" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MSSV" class="form-label">Mã số sinh viên</label>
                        <input asp-for="MSSV" class="form-control" />
                        <span asp-validation-for="MSSV" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MaHP" class="form-label">Mã học phần</label>
                        <input asp-for="MaHP" class="form-control" />
                        <span asp-validation-for="MaHP" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="SoTinChi" class="form-label">Số tín chỉ</label>
                        <input asp-for="SoTinChi" class="form-control" />
                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DiemQuaTrinh" class="form-label">Điểm quá trình</label>
                        <input asp-for="DiemQuaTrinh" class="form-control" />
                        <span asp-validation-for="DiemQuaTrinh" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DiemCuoiKy" class="form-label">Điểm cuối kỳ</label>
                        <input asp-for="DiemCuoiKy" class="form-control" />
                        <span asp-validation-for="DiemCuoiKy" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="HocKy" class="form-label">Học kỳ</label>
                        <input asp-for="HocKy" class="form-control" />
                        <span asp-validation-for="HocKy" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NamHoc" class="form-label">Năm học</label>
                        <input asp-for="NamHoc" class="form-control" />
                        <span asp-validation-for="NamHoc" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
