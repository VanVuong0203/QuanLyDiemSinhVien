@model Diem

@{
    ViewData["Title"] = "Xóa điểm";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xóa điểm sinh viên</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Bạn có chắc chắn muốn xóa thông tin sau?</p>
            <dl class="row">
                <dt class="col-sm-3">Mã số sinh viên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MSSV)</dd>

                <dt class="col-sm-3">Mã học phần</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaHP)</dd>

                <dt class="col-sm-3">Số tín chỉ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoTinChi)</dd>

                <dt class="col-sm-3">Điểm quá trình</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiemQuaTrinh)</dd>

                <dt class="col-sm-3">Điểm cuối kỳ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiemCuoiKy)</dd>

                <dt class="col-sm-3">Học kỳ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HocKy)</dd>

                <dt class="col-sm-3">Năm học</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NamHoc)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="MSSV" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
