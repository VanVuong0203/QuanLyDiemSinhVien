@model IEnumerable<Diem>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">DANH SÁCH ĐIỂM</h1>
       
    </div>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MSSV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaHP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoTinChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiemQuaTrinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiemCuoiKy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diem10)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diem4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KetQua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HocKy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamHoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MSSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoTinChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiemQuaTrinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiemCuoiKy)
                </td>
                <td>
                    @item.Diem10.ToString("F2") <!-- Hiển thị Diem10 với 2 chữ số thập phân -->
                </td>
                <td>
                    @item.Diem4.ToString("F2") <!-- Hiển thị Diem4 với 2 chữ số thập phân -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KetQua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HocKy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamHoc)
                </td>
                <td>
                                <a asp-action="Edit" asp-route-id="@item.MSSV" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i> Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.MSSV" class="btn btn-sm btn-info text-white"><i class="bi bi-info-circle"></i> Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.MSSV" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
</div>

